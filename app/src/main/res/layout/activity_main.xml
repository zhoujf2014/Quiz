<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.gtafe.quiz.QuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y180"
        android:background="@color/indicator_bg">
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:paddingTop="40dp"
            android:text="随堂练习"
            android:textSize="@dimen/x40"/>
        <TextView
            android:textColor="@color/white"
            android:visibility="gone"
            android:padding="10dp"
            android:layout_marginLeft="@dimen/x350"
            android:layout_gravity="bottom"
            android:id="@+id/pager"
            android:text="5/20"
            android:textSize="@dimen/x25"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_weight="100"
        android:paddingLeft="@dimen/x20"
        />

    <TextView
        android:textColor="@color/white"

        android:id="@+id/confir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x40"
        android:background="@drawable/bt_continueexe_green"
        android:gravity="center"
        android:padding="@dimen/x15"
        android:text="提交答案"
        android:textSize="@dimen/x38"/>

</LinearLayout>
